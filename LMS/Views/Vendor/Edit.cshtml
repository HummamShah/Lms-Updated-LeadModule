
@{
    ViewBag.Title = "Edit";
}

<div ng-controller="VendorCtrl" ng-init="EditInit()">
    <div class="jumbotron PageHeading">
        <div class="row"><div class="col-md-3"><h2>Edit Vendor</h2></div></div>
    </div>
    <div class="jumbotron PageHeading">
        <div class="row">
            <form id="VendorAddForm ">
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Name</label>
                        <input type="text" class="form-control" ng-model="Vendor.Name" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Description</label>
                        <input type="text" class="form-control" ng-model="Vendor.Description" />
                    </div>
                </div>
            </form>

        </div>
        <div class="row float-right">
            <button class="btn btn-primary" ng-click="EditVendor(Vendor)">Save Changes</button>
            <a class="btn btn-danger" readonly href="/Vendor">Cancle</a>
        </div>
    </div>
</div>

