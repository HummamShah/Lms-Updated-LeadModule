    <div class="jumbotron PageHeading">
        <div class="row text-center">
            <h2 class="SegmentHeading">Business Infromation</h2>
        </div>
        <div class="row">
            <div class="col-md-4 form-group">
                <label>Number Of Users</label>
                <select ng-model="Company.NOE" class="form-control">
                    <option selected value="">Number of Users </option>
                    <option ng-selected="Company.NOE==0" value="0">1-5</option>
                    <option ng-selected="Company.NOE==1" value="1">5-10</option>
                    <option ng-selected="Company.NOE==2" value="2">10-50</option>
                    <option ng-selected="Company.NOE==3" value="3">50-100</option>
                    <option ng-selected="Company.NOE==4" value="4">100+</option>
                </select>
            </div>
            <div class="col-md-4 form-group">
                <label>Numbe of Branch offices</label>
                <input type="number" ng-model="Company.NoBracnhOffices" class="form-control" />
            </div>
            <div class="col-md-4 form-group">
                <label>Business Industry</label>
                <select ng-model="Company.BusinessIndustry" class="form-control">
                    <option selected value="">Business Industry</option>
                    <option ng-repeat="segment in BusinessSegmentationDropDown" ng-selected="Company.BusinessIndustry==segment.id" value="{{segment.id}}">{{segment.Name}}</option>
                </select>
            </div>
            <div class="col-md-4 form-group">
                <label>NTN</label>
                <input type="text" ng-model="Company.NTN" class="form-control" />
            </div>
            <div class="col-md-4 form-group">
                <label>Currently using IT platform</label>
                <input type="text" ng-model="Company.CurrentItPlatform" class="form-control" />
            </div>
            @*<div class="col-md-4 form-group">
                <label>Future plan for extension in IT Service</label>
                <input type="text" ng-model="Company.FuturePlanOFExtention" class="form-control" />
            </div>*@
            <div class="col-md-4 form-group">
                <label>Currently Used Medium</label>
                <select ng-model="Company.CUDS" class="form-control" ng-change="GetDropdownForServies(Company.CUDS)">
                    <option selected value="">Current Service</option>
                    <option ng-selected="Company.CUDS==0" value="0">DSL</option>
                    <option ng-selected="Company.CUDS==1" value="1">VSAT</option>
                    <option ng-selected="Company.CUDS==2" value="2">WiWax</option>
                    <option ng-selected="Company.CUDS==3" value="3">Fiber</option>
                    <option ng-selected="Company.CUDS==4" value="4">Other</option>
                </select>
            </div>
            @*<div class="col-md-4 form-group" ng-if="Company.CUDS == null">
                <span ng-if="Company.CUDS == null">Please Select Currently Used Data/Internet Service</span>
            </div>*@
            <div class="col-md-4 form-group" ng-if="Company.CUDS != null">
                <span ng-if="Company.CUDS != '4' ">
                    <label>Select Service</label>
                    <select ng-model="Company.CUDSService" class="form-control">
                        <option ng-repeat="service in CurrentServices" value="{{service.Id}}" ng-selected="service.Id == Company.CUDSService">{{service.Name}}</option>
                    </select>
                </span>
                <span ng-if="Lead.CUDS == '4' ">
                    <label>Select service</label>
                    <input type="text" class="form-control" ng-model="Company.CUDSOtherService" />
                </span>
            </div>
            <div class="col-md-4 form-group">
                <label>Number of links</label>
                <input type="number" class="form-control" ng-model="Company.NoLinks" />
            </div>
            @*<div class="col-md-4 form-group">
                <label>Budget</label>
                <input type="text" class="form-control" ng-model="Company.Budget" />
            </div>*@
            @*<div class="col-md-4 form-group">
                <label>Estimated Closing Date</label>
