@{
    ViewBag.Title = "Edit";
}
<div ng-controller="CompanyCtrl" ng-init="EditInit()">
    <div class="jumbotron PageHeading">
        <div class="row"><div class="col-md-3"><h2>Edit Company</h2></div></div>
    </div>

    <div class="jumbotron PageHeading">
        <div class="text-center">
            <div class="row"> <h2 class="SegmentHeading">Basic Information</h2></div>
        </div>
        <div class="row">
            <form id="VendorAddForm ">
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Name*</label>
                        <input type="text" class="form-control" ng-model="Company.Name" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Description</label>
                        <input type="text" class="form-control" ng-model="Company.Description" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2">
                        <label>Is Branch</label>
                        <input type="checkbox" class="" ng-model="Company.IsBranch" />
                    </div>
                </div>
                <div class="form-group" ng-if="Company.IsBranch">
                    <div class="col-md-4">
                        <label>Parent Company</label>
                        <select ng-model="Company.ParentCompanyId" class="form-control">
                            <option selected value="">Select Parent Company</option>
                            <option ng-repeat="Comp in Companies" value="{{Comp.Id}}" ng-selected="Comp.Id == Company.ParentCompanyId">{{Comp.Name}}</option>
                        </select>
                    </div>
                </div>
            </form>
        </div>

    </div>

    <div class="jumbotron PageHeading">
        <div class="row text-center">
            <h2 class="SegmentHeading">Contact Information</h2>
        </div>
        <div class="row">
            <div class="col-md-4 form-group">
                <label>Mode Of Communication</label>
                <select ng-model="Company.MOCId" class="form-control">
                    <option selected value="">Mode of Commincation</option>
                    <option ng-repeat="MOC in MOCS" value={{MOC.Id}} ng-selected="Company.MOCId == MOC.Id">{{MOC.Name}}</option>
                </select>
            </div>
            <div class="col-md-4 form-group">
                <label>Business Operation Time </label>
                <select ng-model="Company.BOT" class="form-control">
                    <option selected value="">Operation Time</option>
                    <option ng-selected="Company.BOT == 0" value="0">Morning</option>
                    <option ng-selected="Company.BOT == 1" value="1">Evening</option>
                    <option ng-selected="Company.BOT == 3" value="3">Night</option>
                    <option ng-selected="Company.BOT == 2" value="2">24/7</option>
                </select>
            </div>

            <div class="col-md-4 form-group">

                <label>Email</label>
                <input type="email" class="form-control" ng-model="Company.Email" />

            </div>
            <div class="col-md-4 form-group">
                <label>Contact</label>
                <input type="text" class="form-control" ng-model="Company.Contact" />
            </div>
            <div class="col-md-4 form-group">
                <label>Alternate Number</label>
                <input type="text" class="form-control" ng-model="Company.CompanyAlternateContact" placeholder="033xxxx.." />
            </div>
