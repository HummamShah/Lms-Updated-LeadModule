            <div class="col-md-4 form-group">
                <label>Website</label>
                <input type="text" class="form-control" ng-model="Company.Website" placeholder="www.sharptel.com" />
            </div>
            <div class="col-md-4 form-group">
                <label>Latitude</label>
                <input type="number" class="form-control" ng-model="Company.Latitude" placeholder="Latitude" />
