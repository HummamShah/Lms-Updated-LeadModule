@{
    ViewBag.Title = "Add";
}
<div ng-controller="UserCtrl" ng-init="AddInit()">
    <div class="jumbotron PageHeading">
        <div class="row"><div class="col-md-3"><h2>Add User</h2></div></div>
    </div>
    <div class="jumbotron PageHeading">
        <div class="row">
            <form id="VendorAddForm ">
                <div class="form-group">
                    <div class="col-md-3">
                        <label>First Name</label>
                        <input type="text" class="form-control" ng-model="User.FirstName" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Last Name</label>
                        <input type="text" class="form-control" ng-model="User.LastName" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Address</label>
                        <input type="text" class="form-control" ng-model="User.Address" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Email</label>
                        <input type="email" class="form-control" ng-model="User.Email" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Primary Contact</label>
                        <input type="text" class="form-control" ng-model="User.Contact1" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Alternate Contact</label>
                        <input type="text" class="form-control" ng-model="User.Contact2" />
                    </div>
                </div>
                @*<div class="form-group">
            <div class="col-md-3">
                <label>Designation Or Role</label>
                <select ng-model="User.Designation" class="form-control">
                    <option value="0">Sales Lead</option>
                    <option value="1">Sales Closer</option>
                    <option value="2">Pmd</option>
                    <option value="3">Pre Sale</option>
                </select>
            </div>
        </div>*@
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Department</label>
                        <select ng-model="User.DepartmentId" class="form-control" ng-change="GetUsersByDepartmentId(User.DepartmentId)">
                            <option selected value="">Select Department</option>
                            <option ng-repeat="Department in Departments" value="{{Department.Id}}">{{Department.Name}}</option>
                        </select>
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-3">
                        <label>Password</label>
                        <input type="password" class="form-control" ng-model="User.Password" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Confirm Password</label>
                        <input type="password" class="form-control" ng-model="User.ConfirmPassword" />
                    </div>
                </div>

                <div class="form-group" ng-if="User.HasSupervisor">
                    <div class="col-md-3">
                        <label>User</label>
                        <select ng-model="User.SupervisorId" class="form-control">
                            <option selected value="">Select Supervisor</option>
                            <option ng-repeat="Supervisor in Supervisors" value="{{Supervisor.Id}}">{{Supervisor.Name}}</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Has Supervisor</label>
                        <input type="checkbox" class="" ng-model="User.HasSupervisor" ng-change="CheckForDepartment(User.DepartmentId)" />
                    </div>
                </div>
            </form>
        </div>
        <div class="row float-right">
            <button class="btn btn-primary" ng-click="AddUser(User)">Add</button>
        </div>
    </div>

</div>

