@{
    ViewBag.Title = "Edit";
}
<div ng-controller="UserCtrl" ng-init="EditInit()">
    <div class="jumbotron PageHeading">
        <div class="row"><div class="col-md-3"><h2>Edit User</h2></div></div>
    </div>
    <div class="jumbotron PageHeading">
        <div class="row">
            <form id="VendorAddForm ">
                <div class="form-group">
                    <div class="col-md-3">
                        <label>First Name</label>
                        <input type="text" class="form-control" ng-model="User.FirstName" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Last Name</label>
                        <input type="text" class="form-control" ng-model="User.LastName" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Address</label>
                        <input type="text" class="form-control" ng-model="User.Address" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Email</label>
                        <input type="email" class="form-control" ng-model="User.Email" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Primary Contact</label>
                        <input type="text" class="form-control" ng-model="User.Contact1" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Alternate Contact</label>
                        <input type="text" class="form-control" ng-model="User.Contact2" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Department</label>
                        <select ng-model="User.DepartmentId" class="form-control" ng-change="GetUsersByDepartmentId(User.DepartmentId)">
                            <option selected value="">Select Department</option>
                            <option ng-repeat="Department in Departments" ng-selected="Department.Id == User.DepartmentId" value="{{Department.Id}}">{{Department.Name}}</option>
                        </select>
                    </div>
                </div>

