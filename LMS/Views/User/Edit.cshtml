                <div class="form-group" ng-if="User.HasSupervisor">
                    <div class="col-md-3">
                        <label>Superviosr</label>
                        <select ng-model="User.SupervisorId" class="form-control">
                            <option selected value="">Select Supervisor</option>
                            <option ng-repeat="Supervisor in Supervisors" ng-selected="Supervisor.Id == User.SupervisorId" value="{{Supervisor.Id}}">{{Supervisor.Name}}</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Has Supervisor</label>
                        <input type="checkbox" class="" ng-model="User.HasSupervisor" ng-change="CheckForDepartment(User.DepartmentId)" />
                    </div>
                </div>
            </form>
        </div>
        <div class="row float-right">
            <button class="btn btn-primary" ng-click="EditUser(User)">Update</button>
        </div>
    </div>

</div>

