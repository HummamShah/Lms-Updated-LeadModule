    @*Billing Details*@
    <div class="jumbotron PageHeading">
        <div class="row text-center ">
            <h2 class="SegmentHeading">Billing Details</h2>
        </div>
        <div ng-if="BillingInformationsList.length > 0" id="#BillingDetails">
            <div class="" style="margin-top: 50px">
                <div class="row" style="border: 1px solid grey; margin-top: 10px; margin-left: 0px; padding-bottom: 20px; margin-bottom: 20px; " ng-repeat="BillingDetail in BillingInformationsList">
                    <div><h3 style="margin-left:15px">Number # {{$index+1}} <span class="float-right" ng-if="BillingDetail.Id == 0"><a href="#BillingDetails" ng-click="RemoveRow($index)"><i class="fas fa-trash-alt" ng-click="RemoveRow($index)"></i></a> </span> </h3></div>
                    <form id="LeadAddForm ">
                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Billing Name<span class="text-danger">*</span></label>
                                <input type="text" class="form-control" readonly ng-model="BillingDetail.BillingName" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Medium <span class="text-danger">*</span></label>
                                <select ng-model="BillingDetail.Medium" class="form-control" readonly disabled>
                                    <option selected value="">Select Link Type</option>
                                    <option ng-selected="BillingDetail.Medium=='Fiber'" value="Fiber">Fiber</option>
                                    <option ng-selected="BillingDetail.Medium=='Radio'" value="Radio">Radio</option>
                                    <option ng-selected="BillingDetail.Medium=='Wimax_LTE'" value="Wimax_LTE">Wimax / LTE</option>
                                    <option ng-selected="BillingDetail.Medium=='Bulk_Bandwidht'" value="Bulk_Bandwidht">Bulk Bandwidht</option>
                                    <option ng-selected="BillingDetail.Medium=='IPs'" value="IPs">IPs</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <label>OTC<span class="text-danger">*</span></label>
                                <input type="number" class="form-control" readonly ng-model="BillingDetail.OTC" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <label>MRC<span class="text-danger">*</span></label>
                                <input type="number" class="form-control" readonly ng-model="BillingDetail.MRC" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Package<span class="text-danger">*</span></label>
                                <input type="text" class="form-control" readonly ng-model="BillingDetail.Package" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-4">
                                <label>Billing Status</label>
                                <select ng-model="BillingDetail.BillingStatus" class="form-control" readonly disabled>
                                    <option selected value="">Select Status</option>
                                    <option ng-selected="BillingDetail.BillingStatus==0" value="0">Enabled</option>
                                    <option ng-selected="BillingDetail.BillingStatus==1" value="1">Disabled</option>
                                    <option ng-selected="BillingDetail.BillingStatus==2" value="2">Suspended</option>
                                </select>
                            </div>
                        </div>
             
                    </form>
                </div>
            </div>
            <div class="row float-right">
                <a href="/Billing/List" class="btn btn-danger">Cancel</a>
            </div>
        </div>
    </div>
