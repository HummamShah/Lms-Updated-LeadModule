@{
    ViewBag.Title = "Add";
}
<div ng-controller="DepartmentCtrl" ng-init="EditInit()">
    <div class="jumbotron PageHeading">
        <div class="row"><div class="col-md-3"><h2>Edit Department</h2></div></div>
    </div>
    <div class="jumbotron PageHeading">
        <div class="row">
            <form id="VendorAddForm ">
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Name</label>
                        <input type="text" class="form-control" ng-model="Department.Name" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Description</label>
                        <input type="text" class="form-control" ng-model="Department.Description" />
                    </div>
                </div>
               
            </form>
        </div>
        <div class="row float-right">
            <button class="btn btn-primary" ng-click="EditDepartment(Department)">Save Changes</button>
        </div>
    </div>

</div>